{
  "name": "highlite",
  "productName": "HighLite",
  "version": "1.2.1",
  "description": "A RuneLite-esque Client for the game High Spell",
  "homepage": "https://github.com/Highl1te/HighliteDesktop#readme",
  "bugs": {
    "url": "https://github.com/Highl1te/HighliteDesktop/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Highl1te/HighliteDesktop.git"
  },
  "license": "GPL-3.0-only",
  "author": "Highlite Team",
  "main": "./out/main/index.js",
  "scripts": {
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "electron-vite preview",
    "build": "electron-vite build",
    "build:clean": "rimraf out dist && npm run build",
    "postinstall": "electron-builder install-app-deps",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "npm run build && electron-builder --mac",
    "build:linux": "npm run build && electron-builder --linux",
    "lint": "eslint . --ext .ts,.js --fix",
    "lint:check": "eslint . --ext .ts,.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "rimraf out dist node_modules/.cache"
  },
  "build": {
    "appId": "com.highlite.desktop",
    "productName": "HighLite",
    "directories": {
      "output": "dist"
    },
    "files": [
      "out/**/*",
      "static/**/*",
      "resources/**/*"
    ],
    "compression": "maximum",
    "publish": [
      {
        "provider": "github",
        "owner": "Highl1te",
        "repo": "HighliteDesktop"
      }
    ],
    "mac": {
      "category": "public.app-category.games",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.png"
    }
  },
  "dependencies": {
    "@babylonjs/core": "^8.11.0",
    "@electron-toolkit/preload": "^3.0.2",
    "@electron-toolkit/utils": "^4.0.0",
    "electron-log": "^5.4.0",
    "electron-updater": "^6.3.9",
    "idb": "^8.0.3"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-prettier": "^3.0.0",
    "@electron-toolkit/eslint-config-ts": "^3.0.0",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@types/node": "^22.14.1",
    "electron": "^36.4.0",
    "electron-builder": "^25.1.8",
    "electron-vite": "^3.1.0",
    "eslint": "^9.14.0",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "terser": "^5.42.0",
    "typescript": "^5.8.3",
    "vite": "^6.2.6",
    "vite-plugin-electron": "^0.29.0"
  },
  "packageManager": "yarn@4.9.2"
}
